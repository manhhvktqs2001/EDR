# EDR Server Environment Configuration

# Environment mode (development, production, testing)
EDR_ENVIRONMENT=development

# Database Configuration
DB_SERVER=MANH
DB_NAME=EDR_System
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_TIMEOUT=30
DB_AUTOCOMMIT=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_DEBUG=false

# Security
SECRET_KEY=edr_secret_key_2024_change_in_production
JWT_SECRET_KEY=jwt_secret_key_change_in_production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/server.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Performance Settings
MAX_CONCURRENT_AGENTS=1000
LOG_BATCH_SIZE=50
DATABASE_TIMEOUT=30
SOCKET_TIMEOUT=60
PING_INTERVAL=25
PING_TIMEOUT=60

# Alert Configuration
MAX_ALERTS_PER_MINUTE=100
ALERT_RETENTION_DAYS=30
NOTIFICATION_TIMEOUT=15

# Rule Engine Configuration
RULE_REFRESH_INTERVAL=60
MAX_RULES_CACHE=1000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,log,csv,json

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Redis Configuration (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=edr-system@company.com

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_SECRET=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Settings
DEV_MODE=true
DEV_HOT_RELOAD=true
DEV_MOCK_DATA=false

# Testing Settings
TEST_DATABASE=EDR_System_Test
TEST_TIMEOUT=30